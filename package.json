{
  "name": "togglebox",
  "version": "1.0.0",
  "description": "Open source remote configuration and feature flag management",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/togglebox.git"
  },
  "license": "Elastic-2.0",
  "author": "ToggleBox",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm build:packages && pnpm build:api && pnpm build:admin",
    "build:packages": "pnpm build:packages:stage1 && pnpm build:packages:stage2 && pnpm build:packages:stage3",
    "build:packages:stage1": "pnpm --filter @togglebox/core --filter @togglebox/configs --filter @togglebox/flags --filter @togglebox/stats --filter @togglebox/experiments build",
    "build:packages:stage2": "pnpm --filter @togglebox/shared --filter @togglebox/cache --filter @togglebox/sdk build",
    "build:packages:stage3": "pnpm --filter @togglebox/database --filter @togglebox/auth --filter @togglebox/sdk-nextjs --filter @togglebox/sdk-expo build",
    "build:api": "pnpm --filter togglebox-api build",
    "build:admin": "pnpm --filter admin build",
    "build:example-nextjs": "pnpm --filter example-nextjs build",
    "dev:api": "pnpm --filter togglebox-api dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:example-nextjs": "pnpm --filter example-nextjs dev",
    "dev:example-expo": "pnpm --filter example-expo start",
    "dev:example-nodejs": "pnpm --filter example-nodejs dev",
    "build:example-nodejs": "pnpm --filter example-nodejs build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prettier": "^3.1.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0",
  "pnpm": {
    "overrides": {
      "aws-sdk": "npm:@aws-sdk/client-s3@latest",
      "jws": ">=3.2.3",
      "qs": ">=6.14.1",
      "tar": ">=7.5.4",
      "next": ">=15.5.10"
    }
  }
}
