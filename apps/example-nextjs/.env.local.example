# ToggleBox Example App Configuration
# Copy this file to .env.local and update the values

# API URL - Your ToggleBox API instance
NEXT_PUBLIC_TOGGLEBOX_API_URL=http://localhost:3000/api/v1

# Platform name - Used to fetch configs for this platform
NEXT_PUBLIC_TOGGLEBOX_PLATFORM=web

# Environment name - staging, production, etc.
NEXT_PUBLIC_TOGGLEBOX_ENVIRONMENT=staging

# API Key for authenticated requests (server-side, not exposed to client)
TOGGLEBOX_API_KEY=tbx_live_49aee29619e6ba6640957f169273ea17

# Client-side API Key (sent via X-API-Key header from browser)
NEXT_PUBLIC_TOGGLEBOX_API_KEY=tbx_live_49aee29619e6ba6640957f169273ea17

# Default user ID for demos
NEXT_PUBLIC_USER_ID=demo-user-123
