{
  "name": "@togglebox/database",
  "version": "0.1.0",
  "description": "ToggleBox multi-database layer (MySQL, MongoDB, SQLite, DynamoDB)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "prisma generate",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "schema:generate": "node scripts/generate-schema.js",
    "prisma:generate": "npm run schema:generate && prisma generate",
    "prisma:migrate": "npm run schema:generate && prisma migrate dev",
    "prisma:deploy": "npm run schema:generate && prisma migrate deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.978.0",
    "@aws-sdk/lib-dynamodb": "^3.705.0",
    "@prisma/client": "^5.7.0",
    "@togglebox/configs": "workspace:*",
    "@togglebox/core": "workspace:*",
    "@togglebox/flags": "workspace:*",
    "@togglebox/experiments": "workspace:*",
    "@togglebox/stats": "workspace:*",
    "@togglebox/shared": "workspace:*",
    "mongoose": "^8.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@types/uuid": "^9.0.7",
    "prisma": "^5.7.0",
    "typescript": "^5.7.2"
  }
}
