{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "@togglebox/database": ["packages/database/dist"],
      "@togglebox/auth": ["packages/auth/dist"],
      "@togglebox/configs": ["packages/configs/dist"],
      "@togglebox/core": ["packages/core/dist"],
      "@togglebox/flags": ["packages/flags/dist"],
      "@togglebox/experiments": ["packages/experiments/dist"],
      "@togglebox/shared": ["packages/shared/dist"]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
